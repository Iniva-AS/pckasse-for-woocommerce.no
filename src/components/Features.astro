---
const features = [
	{
		name: "Automatisk produktsynkronisering",
		category: "Produkter",
		description: "Importer og oppdater produkter fra Quick3 til WooCommerce automatisk. Produktinformasjon, bilder, priser og varianter holdes alltid oppdatert – uten manuelt arbeid.",
		image: "/screenshots/feature-products.png",
		imageAlt: "Produktsynkronisering dashboard",
		size: "large", // top-left large box
	},
	{
		name: "Sanntids ordresynkronisering",
		category: "Ordre",
		description: "Ordre fra WooCommerce overføres øyeblikkelig til Quick3 med komplette kundedata og betalingsinformasjon. Ingen forsinkelser, ingen manuelle inngrep.",
		image: "/screenshots/feature-orders.png",
		imageAlt: "Ordresynkronisering interface",
		size: "large", // top-right large box
	},
	{
		name: "Flerlagerstyring",
		category: "Lager",
		description: "Hold lagerbeholdningen oppdatert på tvers av alle lokasjoner. Kundene kan se tilgjengelighet per lager direkte i nettbutikken.",
		image: "/screenshots/feature-inventory.png",
		imageAlt: "Lagerstyring dashboard",
		size: "small", // bottom-left small box
	},
	{
		name: "Intelligent prissetting",
		category: "Priser",
		description: "Avansert prissystem med støtte for ordinær pris, kampanjepriser, tidsbaserte kampanjer, volumrabatter og kundeprislister.",
		image: "/screenshots/feature-pricing.png",
		imageAlt: "Prissynkronisering",
		size: "small", // bottom-center small box
	},
	{
		name: "Pålitelig bakgrunnsprosessering",
		category: "Ytelse",
		description: "Robust jobsystem håndterer store kataloger uten problemer. Prosessene kjører i bakgrunnen uten å påvirke butikkens ytelse.",
		image: "/screenshots/feature-background.png",
		imageAlt: "Bakgrunnsjobber system",
		size: "small", // bottom-right small box
	},
];
---

<div class="bg-white py-24 sm:py-32">
	<div class="mx-auto max-w-2xl px-6 lg:max-w-7xl lg:px-8">
		<h2 class="text-base/7 font-semibold text-indigo-600">Automatiser alt</h2>
		<p class="mt-2 max-w-lg text-4xl font-semibold tracking-tight text-pretty text-gray-950 sm:text-5xl">
			Alt du trenger for sømløs synkronisering
		</p>
		<div class="mt-10 grid grid-cols-1 gap-4 sm:mt-16 lg:grid-cols-6 lg:grid-rows-2">
			<!-- Feature 1: Automatisk produktsynkronisering (Top left - large) -->
			<div class="relative lg:col-span-3">
				<div class="absolute inset-0 rounded-lg bg-white max-lg:rounded-t-4xl lg:rounded-tl-4xl"></div>
				<div class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)] max-lg:rounded-t-[calc(2rem+1px)] lg:rounded-tl-[calc(2rem+1px)]">
					<img src={features[0].image} alt={features[0].imageAlt} class="h-80 object-cover object-left" />
					<div class="p-10 pt-4">
						<h3 class="text-sm/4 font-semibold text-indigo-600">{features[0].category}</h3>
						<p class="mt-2 text-lg font-medium tracking-tight text-gray-950">{features[0].name}</p>
						<p class="mt-2 max-w-lg text-sm/6 text-gray-600">{features[0].description}</p>
					</div>
				</div>
				<div class="pointer-events-none absolute inset-0 rounded-lg shadow-sm outline outline-black/5 max-lg:rounded-t-4xl lg:rounded-tl-4xl"></div>
			</div>

			<!-- Feature 2: Sanntids ordresynkronisering (Top right - large) -->
			<div class="relative lg:col-span-3">
				<div class="absolute inset-0 rounded-lg bg-white lg:rounded-tr-4xl"></div>
				<div class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)] lg:rounded-tr-[calc(2rem+1px)]">
					<img src={features[1].image} alt={features[1].imageAlt} class="h-80 object-cover object-left lg:object-right" />
					<div class="p-10 pt-4">
						<h3 class="text-sm/4 font-semibold text-indigo-600">{features[1].category}</h3>
						<p class="mt-2 text-lg font-medium tracking-tight text-gray-950">{features[1].name}</p>
						<p class="mt-2 max-w-lg text-sm/6 text-gray-600">{features[1].description}</p>
					</div>
				</div>
				<div class="pointer-events-none absolute inset-0 rounded-lg shadow-sm outline outline-black/5 lg:rounded-tr-4xl"></div>
			</div>

			<!-- Feature 3: Flerlagerstyring (Bottom left - small) -->
			<div class="relative lg:col-span-2">
				<div class="absolute inset-0 rounded-lg bg-white lg:rounded-bl-4xl"></div>
				<div class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)] lg:rounded-bl-[calc(2rem+1px)]">
					<img src={features[2].image} alt={features[2].imageAlt} class="h-80 object-cover object-left" />
					<div class="p-10 pt-4">
						<h3 class="text-sm/4 font-semibold text-indigo-600">{features[2].category}</h3>
						<p class="mt-2 text-lg font-medium tracking-tight text-gray-950">{features[2].name}</p>
						<p class="mt-2 max-w-lg text-sm/6 text-gray-600">{features[2].description}</p>
					</div>
				</div>
				<div class="pointer-events-none absolute inset-0 rounded-lg shadow-sm outline outline-black/5 lg:rounded-bl-4xl"></div>
			</div>

			<!-- Feature 4: Intelligent prissetting (Bottom center - small) -->
			<div class="relative lg:col-span-2">
				<div class="absolute inset-0 rounded-lg bg-white"></div>
				<div class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)]">
					<img src={features[3].image} alt={features[3].imageAlt} class="h-80 object-cover" />
					<div class="p-10 pt-4">
						<h3 class="text-sm/4 font-semibold text-indigo-600">{features[3].category}</h3>
						<p class="mt-2 text-lg font-medium tracking-tight text-gray-950">{features[3].name}</p>
						<p class="mt-2 max-w-lg text-sm/6 text-gray-600">{features[3].description}</p>
					</div>
				</div>
				<div class="pointer-events-none absolute inset-0 rounded-lg shadow-sm outline outline-black/5"></div>
			</div>

			<!-- Feature 5: Pålitelig bakgrunnsprosessering (Bottom right - small) -->
			<div class="relative lg:col-span-2">
				<div class="absolute inset-0 rounded-lg bg-white max-lg:rounded-b-4xl lg:rounded-br-4xl"></div>
				<div class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)] max-lg:rounded-b-[calc(2rem+1px)] lg:rounded-br-[calc(2rem+1px)]">
					<img src={features[4].image} alt={features[4].imageAlt} class="h-80 object-cover" />
					<div class="p-10 pt-4">
						<h3 class="text-sm/4 font-semibold text-indigo-600">{features[4].category}</h3>
						<p class="mt-2 text-lg font-medium tracking-tight text-gray-950">{features[4].name}</p>
						<p class="mt-2 max-w-lg text-sm/6 text-gray-600">{features[4].description}</p>
					</div>
				</div>
				<div class="pointer-events-none absolute inset-0 rounded-lg shadow-sm outline outline-black/5 max-lg:rounded-b-4xl lg:rounded-br-4xl"></div>
			</div>
		</div>
	</div>
</div>
